{{outlet}}
{{#ember-wormhole to='admin-nav' }}
  {{#link-to 'admin.compras' class='breadcrumb' }}Compras{{/link-to}}
  {{#link-to 'admin.proveedores' class='breadcrumb' }}Proveedores{{/link-to}}
  {{#link-to 'admin.nvo-proveedor' class='breadcrumb' }}Nuevo Proveedor{{/link-to}}
{{/ember-wormhole}}
<style>
.form {
	margin-top: 2%;
}

.waves-effect{
	position: fixed;
}
</style>
<h5 class="center-align">Agregar Proveedor</h5>
<div class="row form">
<div class="col s12 m4 offset-m1">
  <div class="col s12">
    <form class="card" style="margin-right: 10px">
      <div class="row card-content">
        <div class="input-field col s12">
        	<i class="material-icons prefix">account_circle</i>
          {{input id="first_name" type="text" class="validate" value=model.nombre}}
          <label for="first_name">Nombre</label>
        </div>
      </div>
    </form>
  </div>
    <div class="col s12">
    <form class="card" style="margin-right: 10px">
      <h6 class="center-align">Periodo de Visita</h6>
      <div class="row card-content">
        <div class="col s12 m6">
              
          <p>
            {{input type="checkbox" id="lunes"}}
            <label for="lunes">Lunes</label>
          </p>
          <p>
            {{input type="checkbox" id="martes" }}
            <label for="martes">Martes</label>
          </p>
          <p>
            {{input type="checkbox" id="miercoles" }}
            <label for="miercoles">Miercoles</label>
          </p>
          <p>
            {{input type="checkbox" id="jueves"}}
            <label for="jueves">Jueves</label>
          </p>
          <p>
            {{input type="checkbox" id="viernes" }}
            <label for="viernes">Viernes</label>
          </p>
          <p>
            {{input type="checkbox" id="sabado"}}
            <label for="sabado">Sabado</label>
          </p>
          <p>
            {{input type="checkbox" id="domingo" }}
            <label for="domingo">Domingo</label>
          </p>
        </div>
        <div class="col s12 m6">
          <p>
            {{input type="radio" id="diario" name="materialize" focus-in=(action 'mutRadio' 'diario')}}
            <label for="diario">Diario</label>
          </p>
          <p>
            {{input type="radio" id="semanal" name="materialize" focus-in=(action 'mutRadio' 'semanal')}}
            <label for="semanal">Semanal</label>
          </p>
          <p>
            {{input type="radio" id="quincenal" name="materialize" focus-in=(action 'mutRadio' 'quincenal')}}
            <label for="quincenal">Quincenal</label>
          </p>
          <p>
            {{input type="radio" id="mensual" name="materialize" focus-in=(action 'mutRadio' 'mensual')}}
            <label for="mensual">Mensual</label>
          </p>
          <p>
            {{input type="radio" id="otro" name="materialize" focus-in=(action 'mutRadio' 'otro')}}
            <label for="otro">Otro</label>
          </p>
          Cada {{input type="number" min="0" max="6" disabled=disabledInput}} dias
        </div>
      </div>
    </form>
  </div>
  </div>


    <div class="col s12 m6 card" style="margin-left: 2%;">
    	<div class="row card-content">
      	<div class="input-field col s9">
      		{{#power-select options=model.productos selected=selectedProducto onchange=(action (mut selectedProducto)) searchPlaceholder="Escribe para buscar un producto" placeholder="Escribe para buscar un producto" searchField='nombre' as |mprima|}}
          {{mprima.nombre}}
        {{/power-select}}
      	</div>
      	<div class="input-field col s3">
      		<a class="waves-effect waves-light btn">AÃ±adir</a>
      	</div>
      </div>
    	<div class="col s12">
      		<table class="centered">
        <thead>
          <tr>
              <th>Producto</th>
              <th>Acciones</th>
          </tr>
        </thead>

        <tbody>
        	{{#each producto}}
          <tr>
            <td>{{producto.nombre}}</td>
            <td><a class="waves-effect waves-light btn"><i class="material-icons left">delete</i>Eliminar</a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
  </div>

    </div>
  </div>
  <a {{action 'guardar' model}} class="waves-effect waves-light btn right" style="margin-right: 5%; bottom: 2%; left: 45%;"><i class="material-icons left">save</i>Guardar</a>

  {{multiselect-checkboxes options=dias labelProperty='name' selection=selectedUsers}}
