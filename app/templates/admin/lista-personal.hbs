<style>
	.row {
		margin-top: 3%;
	}

  body {
    background: url(../media/villita_bg.jpeg);
      background-repeat: no-repeat;
      background-size: 100% 100%;
      height: 100vh;
      margin: 3px auto 0;
      position: relative;
  }

  .izq{
    margin-left: 3%;
  }

  .der{
    margin-right: 3%;
  }

  .spc{
    padding-right: 3% !important;
    padding-left: 3% !important;
  }

</style>

<div class="row">
  <div class="col s6 spc">
    <div class="card">
      <table class="centered">
        <thead>`
          <tr>
            <th>Nombre</th>
            <th>Telefono</th>
            <th>Sucursal</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each model.cajeros as |cajero|}}
            {{#unless existencia.isNew}}
            <tr>
              <td>
                {{cajero.nombre}} {{cajero.apellido}}
              </td>
              <td>
                {{cajero.telefono}}
              </td>
              <td>
                {{cajero.cajeroDe.nombre}}
              </td>
              <td>
                <a class="btn-floating"><i class="material-icons">edit</i></a>
              </td>
            </tr>
            {{/unless}}
            {{else}}
              <h5> No se registran cajeros.</h5>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
    <div class="col s6 spc">
    <div class="card">
      <table class="centered">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Telefono</th>
            <th>Sucursal</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each model.vendedores as |vendedor|}}
            {{#unless vendedor.isNew}}
              <tr>
                <td>
                  {{vendedor.nombre}} {{vendedor.apellido}}
                </td>
                <td>
                  {{vendedor.telefono}}
                </td>
                <td>
                  {{vendedor.vendedorDe.nombre}}
                </td>
                <td>
                  <a class="btn-floating"><i class="material-icons" {{action 'editDistribuido' existencia.producto}}>edit</i></a>
                </td>
              </tr>
            {{/unless}}
            {{else}}
              <h5> No se registran vendedores.</h5>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

</div>
