{{/ember-wormhole}}
<style type="text/css">
	body {
		background: url(https://images.unsplash.com/photo-1413745000559-46fdd2d81cd7?auto=format&fit=crop&w=1334&q=80);
      background-repeat: no-repeat;
      background-size: 100% 100%;
      height: 100vh;
      margin: 3px auto 0;
      position: relative;
	}

	table {
		background: #FFF;
		margin-top: 4%;
	}

	.btn-floating {
		margin-left: 2%;
	}

  .waves-effect {
    margin-top: 3%;
    margin-bottom: 2%;
  }
 </style>
 <div class="row">
 	<div class="col s12 m8 offset-m2">
    {{#link-to "admin.nvo-proveedor" class="waves-effect waves-light btn right"}}<i class="material-icons left">add</i>Agregar Prooveedor{{/link-to}}
 		<table class="centered striped responsive-table">
        <thead>
          <tr>
              <th>Nombre</th>
              <th>Periodo Visita</th>
              <th>Opciones</th>
          </tr>
        </thead>

        <tbody>
        	{{#each myProveedores as |proveedor|}}
          {{#if proveedor.nombre}}
            <tr>
              <td>
                {{proveedor.nombre}}
              </td>
              {{!-- <td>{{proveedor.fecha-visita}}</td> --}}
              <td>Inserte fecha de visita</td>
              <td>
                {{!--#m-wrapper}}
                  <a class="btn-floating waves-effect waves-light red tooltipped" data-position="bottom" data-delay="50" data-tooltip="Editar"><i class="material-icons">visibility</i></a>
                  <a class="btn-floating waves-effect waves-light red tooltipped" data-position="bottom" data-delay="50" data-tooltip="Ver"><i class="material-icons">edit</i></a>
                {{/m-wrapper--}}
                 <a class="btn-floating"><i class="material-icons" {{action 'editProveedor' proveedor}}>edit</i></a>
                <a class="btn-floating"><i class="material-icons" {{action 'deleteProveedor' proveedor}} >delete</i></a>
              </td>
            </tr>
          {{/if}}

          {{else}}
          <h4> AÃºn no tienes proveedores.</h4>
          {{/each}}
        </tbody>
      </table>
 	</div>
 </div>