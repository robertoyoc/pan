{{#ember-wormhole to='admin-nav' }}
  {{#link-to 'admin.productos' class='breadcrumb' }}Productos{{/link-to}}
{{/ember-wormhole}}

<style>
	.row {
		margin-top: 3%;
	}

  body {
    background: url(https://images.unsplash.com/photo-1413745000559-46fdd2d81cd7?auto=format&fit=crop&w=1334&q=80);
  }

  .izq{
    margin-left: 3%;
  }

  .der{
    margin-right: 3%;
  }

  .spc{
    padding-right: 3% !important;
    padding-left: 3% !important;
  }

</style>

<div class="row">
  <div class="col s12">
  	{{#link-to "admin.nvo-receta" class="waves-effect waves-light btn left izq"}}<i class="material-icons left">add</i>Agregar Nueva Receta{{/link-to}}
    {{#link-to "admin.nvo-distribuido" class="waves-effect waves-light btn right der"}}<i class="material-icons left">add</i>Agregar Nuevo Distribuido{{/link-to}}
  </div>
  <div class="col s6 spc">
    <div class="card">
      <table class="centered">
        <thead>`
          <tr>
            <th>Nombre</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each model.recetas as |existencia|}}
            {{#unless existencia.isNew}}
            <tr>
              <td>
                {{existencia.producto.nombre}}
              </td>
              <td>
                {{existencia.cantidad}}
              </td>
              <td>
                {{existencia.producto.precio}}
              </td>
              <td>
                <a class="btn-floating"><i class="material-icons" {{action 'editReceta' existencia.producto}}>edit</i></a>
                <a class="btn-floating"><i class="material-icons" {{action 'delete' existencia}} >delete</i></a>
              </td>
            </tr>
            {{/unless}}
            {{else}}
              <h5> Aún no tienes recetas.</h5>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
