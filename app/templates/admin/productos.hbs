{{#ember-wormhole to='admin-nav' }}
  {{#link-to 'admin.productos' class='breadcrumb' }}Productos{{/link-to}}
{{/ember-wormhole}}

<style>
	.row {
		margin-top: 3%;
	}
</style>

<div class="row">
	<div class="col s12 m8 offset-m2">
	<form class="col s12">
      <div class="row">
        <div class="input-field col s8">
          <i class="material-icons prefix">account_circle</i>
          {{input type="text" class="validate" value=model.nombre}}
          <label>Nombre del Producto</label>
        </div>
        <div class="input-field col s4">
          <i class="material-icons prefix">attach_money</i>
          {{input type="number" class="validate" value=model.precio}}
          <label>Costo</label>
        </div>
      </div>
    </form>
    <a {{action 'guardar' model}} class="waves-effect waves-light btn right"><i class="material-icons left">save</i>Guardar</a>
  </div>
</div>