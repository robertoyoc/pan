{{#light-table modelTable
  height='75vh'
  tableActions=(hash
    delete=(action 'delete')
    edit=(action 'edit')
  )as |t|}}
    {{t.head
      onColumnClick=(action 'onColumnClick')
      iconSortable='fa fa-sort'
      iconAscending='fa fa-sort-asc'
      iconDescending='fa fa-sort-desc'
      fixed=true
    }}

    {{#t.body canSelect=false as |body| }}

    {{#if isLoading}}
      {{#body.loader}}
        {{table-loader}}
      {{/body.loader}}
    {{/if}}

    {{/t.body}}
{{/light-table}}
