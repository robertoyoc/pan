        </div>
      {{/link-to}}
    </div>
  </div>
  <div class="col s12 m6">
    <div class="card products cardFixed">
      <table class="centered stripped">
        <thead>
          <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
            <th>Accion</th>
          </tr>
        </thead>
        <tbody>
            {{#each model.pedidos as |pedido|}}
              {{#unless pedido.isNew}}
                <tr>
                  <td>{{pedido.producto.nombre}}</td>
                  <td>{{format-money pedido.producto.precio.value symbol=selectedCurrency format="%s %v"}}</td>
                  <td>{{number-input cantidad=pedido.cantidad}}</td>
                  <td>
                    {{#unless pedido.isCourtesy}}
                      {{format-money (mult pedido.cantidad pedido.producto.precio) symbol=selectedCurrency format="%s %v"}}
                    {{else}}
                      {{format-money 0 symbol=selectedCurrency format="%v %s"}}
                    {{/unless}}
                  </td>
                  <td><a class="btn-floating waves-effect waves-light red" {{action 'delete' pedido}}><i class="material-icons">delete</i></a></td>
                </tr>
              {{/unless}}
              {{else}}
              <h5> Agrega productos. </h5>
              <br>
            {{/each}}
        </tbody>
      </table>
    </div>
    <div class="redondo">
      <br>
        {{#if model.importeCortesia}}
          <h6> Cortesía: {{format-money model.importeCortesia symbol=selectedCurrency format="%s %v"}}</h6>
        {{/if}}
        <h5> Total: {{format-money model.importeTotal symbol=selectedCurrency format="%s %v"}}</h5>
    </div>
    <div class="row">
      <a class="waves-effect waves-light btn-large right {{unless disabledVender 'disabled'}}" {{action 'finalizar' model}}><i class="material-icons left">save</i>Vender</a>
    </div>
  </div>
  {{#if isNew}}
    <div class="row">
      <a {{action 'historialVenta' model day month year}} class="waves-effect waves-light btn"><i class="material-icons left">history</i>Ventas de hoy</a>
      <a {{action 'signOut'}} class="waves-effect waves-light btn"><i class="material-icons right">close</i>Cerrar Sesión</a>
    </div>
  {{/if}}
