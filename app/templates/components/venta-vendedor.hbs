<style type="text/css">
body {
  background: url(https://images.unsplash.com/photo-1413745000559-46fdd2d81cd7?auto=format&fit=crop&w=1334&q=80);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height: 100vh;
  margin: 3px auto 0;
  position: relative;
}

.img {
  max-width: 100%;
  -moz-transition: all 0.3s;
  -webkit-transition: all 0.3s;
  transition: all 0.3s;
}

.img:hover {
  -moz-transform: scale(1.1);
  -webkit-transform: scale(1.1);
  transform: scale(1.1);
}

input {
  width: 20% !important;
}

button {
  border-radius: 20px;
  height: 25px;
  margin-right: 2%;
  margin-left: 2%;
}

.products {
  max-height: 550px;
  overflow-y: scroll;
}

.redondo {
  margin-top: -20px;
  border-bottom-left-radius: 15px;
  border-bottom-right-radius: 15px;
  border-right: 2px solid white;
  border-left: 2px solid white;
  border-bottom: 2px solid white;
  background: #FFF;
}

h6 {
  padding: 10px 10px 10px 10px;
}

.waves-effect {
  margin-top: 2%;
}

.card {
  height: 130px;
  overflow: hidden;
}

body {
  margin: 0;
}

.card .card-image .card-title {
  bottom: 46px;
}

#idCardRara {
  bottom: -17px!important
}
</style>
<div class="row">
  <div class="col s12 m7">
    <div class="row">
      {{#link-to "vendedor.venta" myModel.venta.id disabled=disabledLinkventa}}
        <div class="col s12 m5 img" style="margin-left: 3%;">
          <div class="card">
            <div class="card-image">
              <img src="../media/vender.jpg" width="100%">
              <span class="card-title">Nueva Venta</span>
            </div>
          </div>
        </div>
      {{/link-to}}
      {{#link-to "vendedor.cortesia" myModel.cortesia.id disabled=disabledLinkcortesia}}
        <div class="col s12 m5 img">
          <div class="card">
            <div class="card-image" style="bottom:0!important">
              <img src="../media/the-courtesy.png">
              <span id="idCardRara" class="card-title">Nueva Cortesía</span>
            </div>
          </div>
        </div>
      {{/link-to}}
      {{#link-to "vendedor.index"}}
        <div class="col s12 m5 img" style="margin-left: 3%;">
          <div class="card">
            <div class="card-image">
              <img src="../media/pan-panel.jpg" width="100%">
              <span class="card-title">Acceso Directo</span>
            </div>
          </div>
        </div>
      {{/link-to}}
      {{#link-to "vendedor.index"}}
        <div class="col s12 m5 img">
          <div class="card">
            <div class="card-image">
              <img src="../media/pan-panel.jpg" width="100%">
              <span class="card-title">Acceso Directo</span>
            </div>
          </div>
        </div>
      {{/link-to}}
      {{#link-to "vendedor.index"}}
        <div class="col s12 m5 img" style="margin-left: 3%;">
          <div class="card">
            <div class="card-image">
              <img src="../media/pan-panel.jpg" width="100%">
              <span class="card-title">Acceso Directo</span>
            </div>
          </div>
        </div>
      {{/link-to}}
      {{#link-to "vendedor.index"}}
        <div class="col s12 m5 img">
          <div class="card">
            <div class="card-image">
              <img src="../media/pan-panel.jpg" width="100%">
              <span class="card-title">Acceso Directo</span>
            </div>
          </div>
        </div>
      {{/link-to}}
      {{#link-to "vendedor.index"}}
        <div class="col s12 m5 img" style="margin-left: 3%;">
          <div class="card">
            <div class="card-image">
              <img src="../media/pan-panel.jpg" width="100%">
              <span class="card-title">Acceso Directo</span>
            </div>
          </div>
        </div>
      {{/link-to}}
      {{#link-to "vendedor.index"}}
        <div class="col s12 m5 img">
          <div class="card">
            <div class="card-image">
              <img src="../media/pan-panel.jpg" width="100%">
              <span class="card-title">Acceso Directo</span>
            </div>
          </div>
        </div>
      {{/link-to}}
      {{#link-to "vendedor.index"}}
        <div class="col s12 m5 img" style="margin-left: 3%;">
          <div class="card">
            <div class="card-image">
              <img src="../media/pan-panel.jpg" width="100%">
              <span class="card-title">Acceso Directo</span>
            </div>
          </div>
        </div>
      {{/link-to}}
      {{#link-to "vendedor.index"}}
        <div class="col s12 m5 img">
          <div class="card">
            <div class="card-image">
              <img src="../media/pan-panel.jpg" width="100%">
              <span class="card-title">Acceso Directo</span>
            </div>
          </div>
        </div>
      {{/link-to}}
    </div>
  </div>
  <div class="col s12 m5">
    <div class="card products">
      <table class="centered stripped">
        <thead>
          <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
            <th>Accion</th>
          </tr>
        </thead>
        <tbody>
          {{#if isVenta}}
            {{#each myModel.venta.pedidos as |pedido|}}
              {{#unless pedido.isNew}}
                <tr>
                  <td>{{pedido.producto.nombre}}</td>
                  <td>{{format-money pedido.producto.precio symbol=selectedCurrency format="%v %s"}}</td>
                  <td>{{number-input cantidad=pedido.cantidad}}</td>
                  <td>{{format-money (mult pedido.cantidad pedido.producto.precio) symbol=selectedCurrency format="%v %s"}}</td>
                  <td><a class="btn-floating waves-effect waves-light red" {{action 'delete' pedido}}><i class="material-icons">delete</i></a></td>
                </tr>
              {{/unless}}
              {{else}}Ningún producto agregado
            {{/each}}
          {{else}}
            {{#each myModel.cortesia.pedidos as |pedido|}}
              {{#unless pedido.isNew}}
                <tr>
                  <td>{{pedido.producto.nombre}}</td>
                  <td>{{format-money pedido.producto.precio symbol=selectedCurrency format="%v %s"}}</td>
                  <td>{{number-input cantidad=pedido.cantidad}}</td>
                  <td>{{format-money (mult pedido.cantidad pedido.producto.precio) symbol=selectedCurrency format="%v %s"}}</td>
                  <td><a class="btn-floating waves-effect waves-light red" {{action 'delete' pedido}}><i class="material-icons">delete</i></a></td>
                </tr>
              {{/unless}}
              {{else}}Ningún producto agregado
            {{/each}}
          {{/if}}
        </tbody>
      </table>
    </div>
    <div class="redondo">
      {{#if isVenta}}
        <h6> Total : {{format-money myModel.venta.importeTotal symbol=selectedCurrency format="%v %s"}}</h6>
      {{else}}
        <h6> Total {{unless isNew 'Cortesía'}}: {{format-money myModel.cortesia.importeTotal symbol=selectedCurrency format="%v %s"}}</h6>
      {{/if}}
    </div>
    {{#if isVenta}}
      <a class="waves-effect waves-light btn right {{unless disabledVender 'disabled'}}" {{action 'finalizar' myModel.venta}}><i class="material-icons left">save</i>Vender</a>
    {{else}}
      <a class="waves-effect waves-light btn right {{unless disabledVender 'disabled'}}" {{action 'finalizar' myModel.cortesia}}><i class="material-icons left">save</i>Vender</a>
    {{/if}}
  </div>
  {{#if isNew}}
    <div class="row">
      {{#link-to "vendedor.historial-venta" (query-params year=year month=month day=day) class="waves-effect waves-light btn right" }}
        <i class="material-icons">history</i> Ventas de hoy
      {{/link-to}}
      {{#link-to "vendedor.historial-cortesia" (query-params year=year month=month day=day) class="waves-effect waves-light btn right" }}
        <i class="material-icons">history</i> Cortesías de hoy
      {{/link-to}}
    </div>
  {{/if}}
</div>
