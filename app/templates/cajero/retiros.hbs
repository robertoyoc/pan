<style type="text/css">
body {
  background: url(https://images.unsplash.com/photo-1413745000559-46fdd2d81cd7?auto=format&fit=crop&w=1334&q=80);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height: 100vh;
  margin: 3px auto 0;
  position: relative;
}

.btn-floating {
  margin-left: 2%;
}

.mt {
  margin-top: 3%;
}

input:not([type]),
input[type=text]:not(.browser-default),
input[type=password]:not(.browser-default),
input[type=email]:not(.browser-default),
input[type=url]:not(.browser-default),
input[type=time]:not(.browser-default),
input[type=date]:not(.browser-default),
input[type=datetime]:not(.browser-default),
input[type=datetime-local]:not(.browser-default),
input[type=tel]:not(.browser-default),
input[type=number]:not(.browser-default),
input[type=search]:not(.browser-default),
textarea.materialize-textarea {
  color: white;
}
</style>
<div class="row">
  <div class="col s8 offset-s2 mt">
    {{#m-wrapper query=".datepicker" method="pickadate" }}
      {{input type="text" class="datepicker" placeholder="Selecciona la fecha..." change=(action 'changeFecha')}}
    {{/m-wrapper}}
  </div>
  <div class="col s8 offset-s2">
    <div class="card">
      <table class="striped centered">
        <thead>
          <tr>
            <th>Fecha y Hora</th>
            <th>Cantidad</th>
            <th>Destinatario</th>
            <th>Estatus</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |retiro|}}
            {{#unless retiro.isNew}}
            <tr>
              <td>{{moment-format retiro.fechaUnix 'MMM DD, HH:mm' 'X' utc=true}}</td>
              <td>{{format-money retiro.cantidad symbol=selectedCurrency format="%v %s"}}</td>
              <td>{{retiro.destinatario}}</td>
              <td>{{retiro.status}}</td>
              <td>
                {{#if (eq retiro.status "Aprobado")}}
                  <a class="btn-floating red" {{action 'openModal' retiro}}><i class="material-icons">details</i></a>
                {{/if}}
              </td>
            </tr>
            {{/unless}}
            {{else}}
              <h5>AÃºn no se registran retiros. </h5>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
{{#m-wrapper query="#modal1" method="modal" }}
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Entrega de Retiro</h4>
      <h5>Retiro {{selectedRetiro.id}}</h5> Destinatario: {{selectedRetiro.destinatario}}
      <br> Cantidad:
      <h4>${{selectedRetiro.cantidad}}</h4>
    </div>
    <div class="modal-footer">
      <a class="modal-action modal-close waves-effect waves-green btn-flat">Cancelar</a>
      <a {{action 'sendRequest' selectedRetiro}} class="modal-action modal-close waves-effect waves-green btn-flat">Entregar</a>
    </div>
  </div>
{{/m-wrapper}}