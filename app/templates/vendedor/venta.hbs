<style>
.main {
	margin-top: 3%;
}

input{
	width: 20% !important;
}
 
 .img{
 	width: 60px;
 	height: 60px;
 }

.name{
	font-size: 1.5em;
}
</style>

<div class="row main">
	<div class="col s12">
		<div class="row">
			<div class="col s12 m3">
				<div class="card center-align">
					<div class="collection">
				        <a class="collection-item">Pan Sal</a>
				        <a class="collection-item">Pan Dulce</a>
				        <a class="collection-item">Pasteles</a>
				        <a class="collection-item">Charcuteria</a>
				        <a class="collection-item">Feité</a>
				        <a class="collection-item">Panqué</a>
				        <a class="collection-item">Galletas</a>
				        <a class="collection-item">Bocadillos</a>
				        <a class="collection-item">Lacteos</a>
				     </div>
				</div>
			</div>
			<div class="col s12 m4">
				<div class="card center-align">
					{{!-- {{log myProductos}} --}}
					<div class="collection">
						{{!-- {{log myProductos}} --}}
				        {{!-- {{#each productos as |producto|}}
						lel
				        	{{else}}No hay productos en stock.
				        {{/each}} --}}
						{{#power-select 
							options=myProductos selected=model.producto
							onchange=(action (mut model.producto)) searchPlaceholder="Escribe
							para buscar" placeholder="Escribe para buscar" searchField='nombre' as |mProduct|}} 
							<div class="row">
							<div class="col s3">
								<img class="img circle" src="http://3.bp.blogspot.com/-Tk4n8JQzTaw/U6ayLnFuO7I/AAAAAAAAB-s/dyRCtYH85dc/s200/Evitar+el+Pan+Antes+de+Comer.png">
							</div>
  							<div class="col s9"><span class="name">{{mProduct.nombre}}</span></div>
  						</div>
						{{/power-select}}

						

				     </div>
				</div>
			</div>
			<div class="col s12 m5">
				{{teclado-numeric myCantidad=model.cantidad}}
					<a {{action 'agregarPedido' model}} class="waves-effect waves-light btn right">{{!-- {{if (or disabledAgregar (v-get this 'cantidad' 'isInvalid')) 'disabled'}}"> --}}
			Agregar al Pedido
		</a>
			</div>
		</div>
		
	</div>
</div>
