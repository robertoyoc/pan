{{outlet}}
<style type="text/css">
body {
  background: url(https://images.unsplash.com/photo-1413745000559-46fdd2d81cd7?auto=format&fit=crop&w=1334&q=80);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height: 100vh;
  margin: 3px auto 0;
  position: relative;
}

.btn-floating {
  margin-left: 2%;
}

.mt {
  margin-top: 3%;
}


input:not([type]),
input[type=text]:not(.browser-default),
input[type=password]:not(.browser-default),
input[type=email]:not(.browser-default),
input[type=url]:not(.browser-default),
input[type=time]:not(.browser-default),
input[type=date]:not(.browser-default),
input[type=datetime]:not(.browser-default),
input[type=datetime-local]:not(.browser-default),
input[type=tel]:not(.browser-default),
input[type=number]:not(.browser-default),
input[type=search]:not(.browser-default),
textarea.materialize-textarea {
  color: black;
}
</style>
<div class="row">
  <div class="col s8 offset-s2 mt">
    {{#m-wrapper query=".datepicker" method="pickadate" }}
      <input type="text" class="datepicker" placeholder="Selecciona la fecha...">
    {{/m-wrapper}}
  </div>
  <div class="col s8 offset-s2">
    <div class="card">
      <table class="striped centered">
        <thead>
          <tr>
            <th>Hora</th>
            <th>Cantidad</th>
            <th>Destinatario</th>
            <th>Estatus</th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |retiro|}}
            <tr>
              <td>{{retiro.hora}}</td>
              <td>{{retiro.cantidad}}</td>
              <td>{{retiro.destinatario}}</td>
              <td>{{retiro.status}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <a {{action 'openModal'}} class="waves-effect waves-light btn right"><i class="material-icons left">done</i>Aprobar Retiro</a>
  </div>
</div>
{{#m-wrapper query="#modal1" method="modal" }}
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Entrega de Retiro</h4>
      <h5>Retiro {{selectedRetiro.id}}</h5> Destinatario: {{input type="text" value=selectedRetiro.destinatario}}
      <br> Cantidad:
      <h4>${{input type="number" value=selectedRetiro.cantidad}}</h4>
      <br> Sucursal: {{log sucursales}}
      {{#m-wrapper query=".browser-default" method="material_select" }}
        <select class="browser-default" onchange= {{action (mut selectedRetiro.sucursalId) value="target.value"}}>
          <option value="" disabled selected>Choose your option</option>
          {{#each sucursales as |sucursalChoice|}}
            {{log sucursalChoice}}
            <option value= {{sucursalChoice.id}} selected= {{eq selectedRetiro.sucursalId sucursalChoice.id}}>{{sucursalChoice.nombre}}</option>
          {{/each}}
        </select>
      {{/m-wrapper}}
    </div>
    <div class="modal-footer">
      <a class="modal-action modal-close waves-effect waves-green btn-flat">Cancelar</a>
      <a {{action 'sendRequest' selectedRetiro}} class="modal-action modal-close waves-effect waves-green btn-flat">Aprobar</a>
    </div>
  </div>
{{/m-wrapper}}