<style type="text/css">
body {
  background: url(https://images.unsplash.com/photo-1413745000559-46fdd2d81cd7?auto=format&fit=crop&w=1334&q=80);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height: 100vh;
  margin: 3px auto 0;
  position: relative;
}

.img {
  max-width: 100%;
  -moz-transition: all 0.3s;
  -webkit-transition: all 0.3s;
  transition: all 0.3s;
}

.img:hover {
  -moz-transform: scale(1.1);
  -webkit-transform: scale(1.1);
  transform: scale(1.1);
}
</style>
<div class="row">
  <div class="col s8 offset-s2">
    <div class="card">
      <table class="striped centered">
        <thead>
          <tr>
            <th>Hora</th>
            <th>Cantidad</th>
            <th>Estado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |request|}}
            <tr>
              <td>{{request.cobro.venta.hora}}</td>
              <td>${{request.cobro.venta.importeTotal}}</td>
              <td>{{request.status}}</td>
              <td>
                <a class="btn-floating red" {{action 'openModal' request}}><i class="material-icons">details</i></a>
              </td>
            </tr>
            {{else}}
              Aún no hay cancelaciones
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
{{#m-wrapper query="#modal1" method="modal" }}
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Cancelación</h4>
      <h5>Cobro {{selectedRequest.cobro.id}}</h5> Solicitado en: {{selectedRequest.sucursal.nombre}}
      <br> Por: {{selectedRequest.account.nombre}} {{selectedRequest.account.apellido}}
      <div class="input-field col s12">
        {{textarea class="materialize-textarea" value=selectedRequest.motivo disabled=true}}
        <label for="textarea1">Motivo</label>
      </div>
    </div>
    <div class="modal-footer">
      <a {{action 'sendDennied' selectedRequest}} class="modal-action modal-close waves-effect waves-green btn-flat">Denegar</a>
      <a {{action 'sendAprobal' selectedRequest}} class="modal-action modal-close waves-effect waves-green btn-flat">Aprobar</a>
    </div>
  </div>
{{/m-wrapper}}