{{outlet}}
<style type="text/css">
body {
  background: url(https://images.unsplash.com/photo-1413745000559-46fdd2d81cd7?auto=format&fit=crop&w=1334&q=80);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height: 100vh;
  margin: 3px auto 0;
  position: relative;
}
.mt {
  margin-top: 5%;
}

.mb{
	margin-bottom: 5%;
}

</style>
<div class="row">
  <div class="col s8 offset-s2"><br>
  	{{#link-to "dueno.nvo-vendedor" class="waves-effect waves-light btn right"}}<i class="material-icons left">add</i>Agregar Vendedor{{/link-to}}
    <div class="card mt">
      <table class="striped centered">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Telefono</th>
            <th>Acci√≥n</th> 
          </tr>
        </thead>
        <tbody>
            {{#each model as |vendedor|}}
              {{#unless vendedor.isNew}}
                <tr>
                  <td>{{vendedor.nombre}} {{vendedor.apellido}}</td>
                  <td>{{vendedor.telefono}}</td>
                  <td>{{vendedor.sucursal.nombre}}</td>
                  <td>
                    <a class="btn-floating"><i class="material-icons" {{action 'editVendedor' vendedor}}>edit</i></a>
                    <a class="btn-floating red"><i class="material-icons" {{action 'deleteVendedor' vendedor}} >delete</i></a>
                  </td>
                </tr>
              {{/unless}}
            {{else}}
              <h5>No hay cajeros registrados.</h5>
            {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>